<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/e_Title"
        android:text="Enemy's Health"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginTop="75dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/enemyCard"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="15dp">

        <TextView
            android:id="@+id/enemyHealth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="100"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/firstPlayerCard"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_gravity="left"
        android:layout_marginStart="50dp"
        android:layout_marginTop="270dp"
        app:cardBackgroundColor="@color/purple_500"
        app:cardCornerRadius="35dp">

        <TextView
            android:id="@+id/pOne_Health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="100"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/retryOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="71dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/ic_baseline_rotate_right_24" />

    <androidx.cardview.widget.CardView
        android:id="@+id/secondPlayerCard"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="270dp"
        app:cardBackgroundColor="@color/purple_500"
        app:cardCornerRadius="35dp">

        <TextView
            android:id="@+id/pTwo_Health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="100"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/thirdPlayerCard"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_gravity="right"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="270dp"
        app:cardBackgroundColor="@color/purple_500"
        app:cardCornerRadius="35dp">

        <TextView
            android:id="@+id/pThree_Health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="100"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/p_Title"
        android:text="Choose your damage output!"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="390dp"/>

    <TextView
        android:id="@+id/levelTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="460dp"
        android:text="Players Remaining:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/levelNumber"
        android:text="99"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="490dp"/>

    <ImageButton
        android:id="@+id/restartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="525dp"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/ic_baseline_replay_24" />

    <ToggleButton
        android:id="@+id/audioButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_baseline_volume_up_24"
        android:textOff=" "
        android:textOn=" "
        android:layout_marginTop="650dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/scoreLabel"
        android:text="Score: "
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="590dp"
        android:layout_gravity="center_horizontal"/>

</FrameLayout>
